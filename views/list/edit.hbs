{{#if errors}}
{{#each errors}}
<div class="alert alert-danger">{{this}}</div>
{{/each}}
{{/if}}

<form method="post" enctype="application/x-www-form-urlencoded" action="/lists/{{this.id}}" name="list" id="list">
    <div class="row">
        <div class="col-md-9 form-group">
            <input class="form-control" name="list_name" value="{{name}}" />
        </div>
        <div class="col-md-3">
            <button value="PATCH" onclick="updateList(this); return false" class="btn btn-success"
                title="UPDATE LIST">UPDATE</button>
            <input required minlength="6" type="hidden" id="method" name="_method" value="DELETE" />
            <button value="DELETE" onclick="updateList(this); return false" class="btn btn-danger"
                title="DELETE">DELETE</button>
        </div>
    </div>
</form>