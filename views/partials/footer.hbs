<footer class="footer mt-auto py-3 bg-light fixed-bottom">
  <!-- sull'id filter-buttons c'Ã¨ una classe css custom -->
  <div class="container" id="filter-buttons">
    <div class="row">
      <!-- Disabilito il pulsante quando ci clicco -->
      <div class="col-md-4">{{#compare completed '!==' 'ALL'}}<a href="?completed=ALL" class="btn btn-success">ALL
          TODOS</a>{{else}}<button disabled class="btn btn-success">ALL TODOS</button>{{/compare}}</div>
      <div class="col-md-4">{{#compare completed '!==' '1'}}<a href="?completed=1"
          class="btn btn-success">TODO</a>{{else}}<button disabled class="btn btn-success">TODO</button>{{/compare}}
      </div>
      <div class="col-md-4">{{#compare completed '!==' '0'}}<a href="?completed=0"
          class="btn btn-success">COMPLETED</a>{{else}}<button disabled
          class="btn btn-success">COMPLETED</button>{{/compare}}
      </div>
    </div>
  </div>
</footer>

<!-- Li carichiamo qui nel footer per velocizzare la pagina -->
