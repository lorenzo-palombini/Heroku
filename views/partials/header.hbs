<header>
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">MY TODO LIST</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav me-auto mb-2 mb-md-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Lists</a>
          </li>
          <li class="nav-item">
            <!-- Chiamata in GET alla rotta /new -->
            <a class="nav-link" href="/new">New List</a>
          </li>
          <li class="nav-item">
            <!-- Chiamata in GET alla rotta /todos -->
            <a class="nav-link" href="/todos">Todos</a>
          </li>
          {{#if user}}
          <li class="nav-item nav-link">
            Welcome {{user.name}}!
          </li>
          <li class="nav-item">
            <!-- Chiamata in GET alla rotta /auth/logout -->
            <a class="nav-link" href="/auth/logout">Logout</a>
          </li>
          {{else}}
          <li class="nav-item">
            <!-- Chiamata in GET alla rotta /auth/login -->
            <a class="nav-link" href="/auth/login">Login</a>
          </li>
          <li class="nav-item">
            <!-- Chiamata in GET alla rotta /auth/signup -->
            <a class="nav-link" href="/auth/signup">Signup</a>
          </li>
          {{/if}}
        </ul>
        <!-- Chiamata in GET con parametro in url q alla rotta / -->
        <form class="d-flex" method="get">
          <input value="{{q}}" name="q" type="text" class="form-control me-2" type="search" placeholder="Search"
            aria-label="Search" />
          <button type="submit" class="btn btn-outline-success btn-sm me-2">SEARCH</button>
          <button onclick="this.parentNode.q.value=''" class="btn btn-outline-secondary"></button>">RESET</button>
        </form>
      </div>
    </div>
  </nav>
</header>